<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="com.techease.appointment.fragments.customer.ShowRetailersFragment">

    
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150sp"
            android:background="@drawable/gradient_background">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Retailers"
                android:textColor="#ffffff"
                android:textSize="24sp"
                android:layout_marginTop="30sp"
                android:layout_centerHorizontal="true"
                android:typeface="sans" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_marginTop="100sp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/retailer_one"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="5sp"
                android:text="name"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/back_shape"/>

            <TextView
                android:id="@+id/retailer_two"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_below="@id/retailer_one"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:text="name"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/back_shape"/>


            <TextView
                android:id="@+id/retailer_three"
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:layout_below="@id/retailer_two"
                android:layout_marginTop="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginLeft="10sp"
                android:text="name"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/back_shape"/>


        </LinearLayout>

    </FrameLayout>



</LinearLayout>
